<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lnContenedor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgChatFriend"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/style_imagenes"

        android:src="@drawable/ic_hand_love"
        android:layout_marginTop="10dp"

        android:layout_gravity="top"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"

        android:layout_gravity="top"

        android:backgroundTint="@color/purple_200"
        app:cardCornerRadius="15dp"

        android:layout_weight="1">
        <TextView

            android:id="@+id/txtMensaje"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"
            android:text="Hola"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </androidx.cardview.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgChatAlumno"
        android:layout_width="40dp"
        android:layout_height="50dp"

        android:layout_marginEnd="10dp"
        android:layout_marginTop="9dp"
        app:lottie_autoPlay="true"

        app:lottie_rawRes="@raw/visita"

        android:layout_gravity="top"/>

</LinearLayout>
